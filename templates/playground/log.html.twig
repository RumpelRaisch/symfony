{% extends 'base.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-category">Log Files</h5>
                <ul class="nav nav-pills">
                    {% for info in logDirInfo %}
                    <li class="nav-item">
                        <a class="nav-link{% if file == info %} active{% endif %}" href="{{ absolute_url(path('playground.log', { 'file' : info })) }}">{{ info }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% if log is not same as(null) %}
            <div class="card-body active">
                <pre class="card-text">{{ log }}</pre>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
