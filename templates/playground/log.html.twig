{% extends 'base.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-category">Log Files</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    {% for info in logDirInfo %}
                    {% set class = '' %}
                    {% if file == info.name %}
                    {% set class = ' text-primary' %}
                    {% set link = absolute_url(path('playground.log')) %}
                    {% set chevron = 'down' %}
                    {% else %}
                    {% set link = absolute_url(path('playground.log', { 'file' : info.name })) %}
                    {% set chevron = 'right' %}
                    {% endif %}
                    <li>
                        <hr>
                        <div class="row">
                            <div class="col-md-3{{ class }}">
                                <a href="{{ link }}">
                                    <i class="fas fa-chevron-{{ chevron }} fa-xs fa-fw"></i> {{ info.name }}
                                </a>
                            </div>
                            <div class="col-md-3{{ class }}">
                                {{ info.time }}
                            </div>
                            <div class="col-md-3{{ class }}">
                                {{ info.size }}
                            </div>
                            {% if file == info.name and log is not same as(null) %}
                            <div class="col-md-12 mt-3">
                                <pre>{{ log }}</pre>
                            </div>
                            {% endif %}
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
