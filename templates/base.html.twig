{% if config is not defined %}
    {% set config = { } %}
{% endif %}

{% if config['name'] is not defined %}
    {% set config = config|merge({ 'name' : 'Just an example.' }) %}
{% endif %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <link rel="icon" href="{{ absolute_url('favicon.ico') }}">
        <title>{% block title %}This should never be shown!{% endblock %} - raischblog.de</title>

        <!-- base css - start -->
        <!-- fonts and icons -->
        <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet">
        <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
        <!-- bootstrap theme -->
        <link rel="stylesheet" href="{{ absolute_url(asset('css/black-dashboard.css?v=1.0.0')) }}">
        <link rel="stylesheet" href="{{ absolute_url(asset('css/nucleo-icons.css')) }}">
        <link rel="stylesheet" href="{{ absolute_url(asset('css/common.min.css')) }}">
        <!-- base css - end -->
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="wrapper ">
            <div class="sidebar" data-color="purple" data-background-color="white">
                <div class="logo">
                    <a href="{{ absolute_url(path('app.index')) }}" class="simple-text logo-mini">BS</a>
                    <a href="{{ absolute_url(path('app.index')) }}" class="simple-text logo-normal">Bit Shifting</a>
                </div>

                <div class="sidebar-wrapper">
                    <ul class="nav">
                        <li class="nav-item{% if indexIsActive is defined and indexIsActive is same as(true) %} active{% endif %}">
                            <a class="nav-link" href="{{ absolute_url(path('app.index')) }}">
                                <i class="tim-icons icon-chart-pie-36"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        {% block sidebar %}{% endblock %}
                    </ul>
                </div>
            </div>
            <div class="main-panel">
                <!-- Navbar -->
                <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                    <div class="container-fluid">
                        <div class="navbar-wrapper">
                            <a class="navbar-brand" href="{{ absolute_url(path('app.index')) }}">Dashboard</a>
                        </div>

                        <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="navbar-toggler-icon icon-bar"></span>
                            <span class="navbar-toggler-icon icon-bar"></span>
                            <span class="navbar-toggler-icon icon-bar"></span>
                        </button>

                        <div class="collapse navbar-collapse justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="#pablo">
                                        <i class="tim-icons icon-bell-55"></i>  Notifications
                                    </a>
                                </li>
                                {% block navbar %}{% endblock %}
                            </ul>
                        </div>
                    </div>
                </nav>
                <!-- End Navbar -->
                <div class="content">
                    <div class="container-fluid">
                        {% block content %}{% endblock %}
                    </div>
                </div>
                <footer class="footer">
                    <div class="container-fluid">
                        <nav class="float-left">
                            <ul>
                                {% block footer_nav_list %}{% endblock %}
                            </ul>
                        </nav>
                        <div class="copyright float-right">
                            &copy;
                            <script>document.write(new Date().getFullYear())</script>,
                            made with <i class="tim-icons icon-heart-2"></i> by
                            <a href="https://www.creative-tim.com" target="_blank">Creative Tim</a> for a better web.
                        </div>
                        {% block footer %}{% endblock %}
                    </div>
                </footer>
            </div>
        </div>

        <!-- base js - start -->
        <!-- core js files -->
        <script src="{{ absolute_url(asset('js/core/jquery.min.js')) }}" type="text/javascript"></script>
        <script src="{{ absolute_url(asset('js/core/popper.min.js')) }}" type="text/javascript"></script>
        <script src="{{ absolute_url(asset('js/core/tooltip.min.js')) }}" type="text/javascript"></script>
        <script src="{{ absolute_url(asset('js/core/bootstrap.min.js')) }}" type="text/javascript"></script>
        {# <script src="{{ absolute_url(asset('js/plugins/perfect-scrollbar.jquery.min.js')) }}" type="text/javascript"></script> #}
        <!-- notifications plugin -->
        <script src="{{ absolute_url(asset('js/plugins/bootstrap-notify.js')) }}" type="text/javascript"></script>
        <!-- control center for material dashboard: parallax effects, scripts for the example pages etc -->
        <script src="{{ absolute_url(asset('js/black-dashboard.js?v=1.0.0')) }}" type="text/javascript"></script>
        <script src="{{ absolute_url(asset('js/common.js')) }}"></script>
        <!-- base js - end -->
        {% block javascripts %}{% endblock %}
    </body>
</html>
